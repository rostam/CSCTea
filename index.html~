<script src="generate.js"></script>
<script>


var gen = new generate();
var graph = gen.complete(6);
window.onload = init;

function init() {
	for(var m in gen) {	
	if(typeof gen[m] == "function")
	{
		var x=document.getElementById("generators");
		var option=document.createElement("option");
		option.text=m;
		option.onclick="alert('s');";
		try
  		{
  			// for IE earlier than version 8
  			x.add(option,x.options[null]);
  		}	
		catch (e)
  		{
  			x.add(option,null);
  		}
            //graph=gen[m](5);
	}
	}
}

var cashArr = new Array();
var ft = 1

jQuery(function(){
	var springy = jQuery('#springydemo').springy({
		graph: graph,
		nodeSelected: function(node){	
			if(graph.cholesky == true) {
				
				for(var i=0;i < cashArr.length;i++) {
					cashArr[node.id][i] = 0;
					cashArr[i][node.id] = 0;
				}
				var temp = graph.arrRemoveEdges;
				for(var i=0;i < temp.length;i++)
				{	
					for(var j=0;j < temp.length;j++) 
					{
						if(i!=j)
							cashArr[temp[i].id][temp[j].id] = 1;	
					}					
				}

				document.getElementById('matrix').innerHTML = createMatrix(cashArr,0);
			}
		}

	});
        if(ft == 1) {
		cashArr = graph.matrix();
		document.getElementById('matrix').innerHTML = createMatrix(cashArr,0);
	} 
});

function cholesky() {
	if(graph.cholesky == false) {graph.cholesky = true;document.getElementById('cholesky').innerHTML = 'Deactivate Cholesky';}
	else {graph.cholesky = false;document.getElementById('cholesky').innerHTML = 'Activate Cholesky';}
}

function edit() {
	if(graph.edit == false) {graph.edit = true;document.getElementById('edit').innerHTML = 'Deactivate Edit Mode';}
	else {graph.edit = false;document.getElementById('edit').innerHTML = 'Activate Edit Mode';}
}

function updateSlider(value, type) {
	if(type == 'velocity') graph.velocity = value;
	else graph.position = value;
}

function updateGraph() {
	graph.removeAll();	
	var g2=gen[$('#generators option:selected').text()](document.getElementById("n").value,document.getElementById("m").value);
	var arr = new Array();
	g2.nodes.forEach(function(n)
	{
		arr[n.id] = graph.newNode();
	});
	
	g2.edges.forEach(function(e)
	{
		graph.newEdge(arr[e.source.id], arr[e.target.id],{color: 'blue', directional:false});
	});

	cashArr = graph.matrix();
	document.getElementById('matrix').innerHTML = createMatrix(cashArr,1);
}

</script>
<table width="100%" height="480">
<tr><td width="20%">
<div>Graph Generators:
<select onchange="updateGraph();" id="generators">
</select></div>
<div>n: <input id="n"/></div><div>p:<input id="m"/></div>
<br/>

<div id="slider">
Update Velocity:<br/>
0.001 
<input id="slide" type="range" min="0.000" max="0.06" step="0.001" value="0.006" onchange="updateSlider(this.value, 'velocity')" />
0.06
</div>
Update Position:<br/>
<div id="slider">
0.001 
<input id="slide" type="range" min="0.000" max="0.06" step="0.001" value="0.006" onchange="updateSlider(this.value, 'position')" />
0.06
</div>
</br>
<button id='cholesky' onclick="cholesky()">Activate Cholesky</button>
</td><td width="40%">
<canvas id="springydemo" width="640" height="480"></canvas>
</td><td width="40%" id="matrix"></td></tr></table>
