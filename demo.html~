<script>

var graph = new Graph();

var v0 = graph.newNode();
var v1 = graph.newNode();
var v2 = graph.newNode();
var v3 = graph.newNode();
var v4 = graph.newNode();
var v5 = graph.newNode();
var v6 = graph.newNode();
var v7 = graph.newNode();
var v8 = graph.newNode();

graph.newEdge(v0, v1,{color: '#00A0B0',directional:false});
graph.newEdge(v1, v2, {color: '#CC333F',directional:false});
graph.newEdge(v2, v4, {color: '#EB6841',directional:false});
graph.newEdge(v1, v3, {color: '#EDC951',directional:false});
graph.newEdge(v5, v6, {color: '#7DBE03C',directional:false});
graph.newEdge(v0, v6, {color: '#000000',directional:false});
graph.newEdge(v6, v7, {color: '#00A0B0',directional:false});
graph.newEdge(v4, v3, {color: '#6A4A3C',directional:false});
graph.newEdge(v0, v8, {color: '#CC333F',directional:false});
graph.newEdge(v8, v6, {color: '#EB6841',directional:false});

jQuery(function(){
	var springy = jQuery('#springydemo').springy({
		graph: graph,
		nodeSelected: function(node){	
		}
	});
});

function cholesky() {
	if(graph.cholesky == false) {graph.cholesky = true;document.getElementById('cholesky').innerHTML = 'Deactivate Cholesky';}
	else {graph.cholesky = false;document.getElementById('cholesky').innerHTML = 'Activate Cholesky';}
	document.getElementById('matrix').innerHTML = createMatrix(graph.matrix());
}

function edit() {
	if(graph.edit == false) {graph.edit = true;document.getElementById('edit').innerHTML = 'Deactivate Edit Mode';}
	else {graph.edit = false;document.getElementById('edit').innerHTML = 'Activate Edit Mode';}
}

function updateSlider(value, type) {
	if(type == 'velocity') graph.velocity = value;
	else graph.position = value;
}

</script>
<table width="1300" height="480">
